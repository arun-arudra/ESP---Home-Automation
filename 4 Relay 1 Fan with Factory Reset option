#if ENABLE_FAN
void button5Handler(AceButton* b, uint8_t type, uint8_t s) { 
  if(type==AceButton::kEventPressed) { toggleState_5=1; fanSpeedControl(currSpeed); } 
  else { toggleState_5=0; fanSpeedControl(0); }
  pref.putBool("Fan_Power", toggleState_5); my_fan.updateAndReportParam(ESP_RMAKER_DEF_POWER_NAME, toggleState_5); 
}
#endif
